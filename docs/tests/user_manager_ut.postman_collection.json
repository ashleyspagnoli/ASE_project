{
	"info": {
		"_postman_id": "c6a2e411-4560-4965-b568-d069b2a7585f",
		"name": "Auth MS - Login & Register ONLY (Minimal)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Setup Variabili Base",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": ""
				}
			},
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// ðŸ›‘ IMPOSTA IL TUO URL QUI PRIMA DI ESEGUIRE",
							"pm.environment.set(\"baseUrl\", \"https://localhost:5004\");",
							"pm.environment.set(\"test_username\", \"mocktestuser\");",
							"pm.environment.set(\"test_password\", \"Secure12345\");",
							"pm.environment.set(\"test_email\", \"mocktest@example.com\");"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"name": "1. Registrazione Utente (SUCCESS & DUPLICATE)",
			"item": [
				{
					"name": "1.1 SUCCESS - Registra Nuovo Utente",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201 Created\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"pm.test(\"Response confirms registration\", function () {",
									"    pm.expect(pm.response.json().message).to.eql(\"Registration successful.\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"{{test_username}}\",\n    \"password\": \"{{test_password}}\",\n    \"email\": \"{{test_email}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/users/register",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"users",
								"register"
							]
						}
					}
				},
				{
					"name": "1.2 FAILURE - Username Duplicato",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 400 Bad Request\", function () {",
									"    pm.response.to.have.status(400);",
									"});",
									"pm.test(\"Detail message is correct (Duplicate)\", function () {",
									"    pm.expect(pm.response.json().detail).to.be.oneOf([\"Username already registered\", \"Email already registered\"]);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"{{test_username}}\",\n    \"password\": \"{{test_password}}\",\n    \"email\": \"{{test_email}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/users/register",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"users",
								"register"
							]
						}
					}
				}
			]
		},
		{
			"name": "2. Login Utente (SUCCESS & FAILURE)",
			"item": [
				{
					"name": "2.1 SUCCESS - Login JSON e Salvataggio Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200 OK\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"var jsonData = pm.response.json();",
									"pm.test(\"Token is received\", function () {",
									"    pm.expect(jsonData.token).to.be.a('string').and.to.have.lengthOf.at.least(50);",
									"});",
									"// ðŸŸ¢ Salva il token per l'uso in test successivi",
									"pm.environment.set(\"test_token\", jsonData.token);",
									"pm.environment.set(\"token_type\", jsonData.token_type);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"{{test_username}}\",\n    \"password\": \"{{test_password}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/users/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"users",
								"login"
							]
						}
					}
				},
				{
					"name": "2.2 FAILURE - Password non valida",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 401 Unauthorized\", function () {",
									"    pm.response.to.have.status(401);",
									"});",
									"pm.test(\"Detail message is correct\", function () {",
									"    pm.expect(pm.response.json().detail).to.eql(\"Invalid username or password\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"{{test_username}}\",\n    \"password\": \"WrongPassword123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/users/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"users",
								"login"
							]
						}
					}
				}
			]
		}
	]
}